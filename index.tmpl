<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Olivier Lucas Juan Tlapale Stalder</title>
    <link href="oltos.css" type="text/css" rel="stylesheet" media="screen" />
    <script type="text/javascript" src="js/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="js/jquery-ui-1.8.16.custom.min.js"></script>
    <script type="text/javascript" src="js/oltos.js"></script>
    <script type="text/javascript">
      var medias = [
        % for img in images:
          {
            name:     "${img[0]}",
            preview:  "${img[0]}",
            datetime: "${img[1]['DateTime']}",
            width:    ${img[3]},
            type:     "${img[5]}"
          },
        % endfor
      ];
    </script>
  </head>
  <body>
    <div class="gallery">
      <div class="header">
	<h1>Olivier Lucas Juan Tlapale Stalder</h1>
	<div>
	% for i in monthes:
	  % if i == last:
	      <a ${'class="current"' if i == current else ""} href="index.html">${i}</a>
	  % else:
	      <a ${'class="current"' if i == current else ""} href="${i}.html">${i}</a>
	  % endif
	% endfor
	</div>
      </div>

      <div class="displayer">
	<a id="prevlink" href="${images[0][0]}"><img id="preview" src="preview/${images[0][0]}" /></a>
      </div>

      <div class="info">
        <strong id="name">${images[0][0]}</strong>
        <p id="metadata">${images[0][1]['DateTime']}</p>
        <p id="debug"></p>
      </div>

      <div class="scroll">
	<div class="scrollable"><!--
	% for (i,img) in enumerate(images):
          --><img src="${img[2]}" width="${img[3]}" height="${img[4]}" alt="${img[0]} (${img[1]['DateTime']})" id="thumb-${i}" onclick="mypreview(${i});" /><!--
	% endfor
        --></div>
      </div>
    </div>
  </body>
</html>
